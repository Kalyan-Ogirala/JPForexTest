package com.kalyantest.draw.drawingapp.entity.Commands;

import lombok.Data;
import com.kalyantest.draw.drawingapp.entity.*;
import org.springframework.stereotype.Component;
import com.kalyantest.draw.drawingapp.business.DrawBL;
import org.springframework.beans.factory.annotation.Autowired;

@Data
@Component
public class L implements Command {

    @Autowired
    DrawBL utilities;

    private Point p1;
    private Point p2;

    @Override
    public void executeCommand() {
        utilities.drawLine(new Point(p1.getY()-1, p1.getX()-1), new Point(p2.getY()-1, p2.getX()-1), 'x');
    }
}
