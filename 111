package com.kalyantest.draw.drawingapp.entity.Commands;

import com.kalyantest.draw.drawingapp.entity.Canvas;
import com.kalyantest.draw.drawingapp.entity.Point;
import com.kalyantest.draw.drawingapp.business.DrawBL;
import lombok.Data;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

@Data
@Component
public class C implements Command {

    @Autowired
    Canvas canvas;

    @Autowired
    DrawBL utilities;

    private int width;
    private int height;

    public void setCanvas(){
        canvas.setShape(new char[height][width]);
        for (int i=0; i<=height-1; i++)
            for (int j=0; j<width-1;j++)
                canvas.getShape()[i][j] = ' ';
    }

    @Override
    public void executeCommand() {
        utilities.drawLine(new Point(0,0), new Point(0, width-1), '-');
        utilities.drawLine(new Point(height-1, 0), new Point(height-1, width-1), '-');
        utilities.drawLine(new Point(0,0), new Point(height-1, 0), '|');
        utilities.drawLine(new Point( 0,width-1), new Point(height-1, width-1 ), '|');
    }
}
