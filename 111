package com.kalyantest.draw.drawingapp.service;

import java.util.Scanner;

import org.springframework.stereotype.Service;
import com.kalyantest.draw.drawingapp.entity.Commands.Command;
import org.springframework.beans.factory.annotation.Autowired;
import com.kalyantest.draw.drawingapp.business.DrawBL;

@Service
public class DrawService {

    @Autowired
    DrawBL drawBL;

    public Command readCommand()
    {
        System.out.println("enter command:");
        String commandText = new Scanner(System.in).nextLine();
        return drawBL.inputCommandInterpreter(commandText);
    }

    public void draw(Command command)
    {
        if (command != null) {
            command.executeCommand();
            drawBL.printShape();
        }
        else
        {
            System.out.println("Invalid Command! Please try again.");
        }
    }
}
