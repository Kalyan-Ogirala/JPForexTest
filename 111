package com.kalyantest.draw.drawingapp;

import org.springframework.boot.SpringApplication;
import org.springframework.context.ApplicationContext;
import com.kalyantest.draw.drawingapp.service.DrawService;
import org.springframework.boot.autoconfigure.SpringBootApplication;

@SpringBootApplication
public class DrawingAppApplication {

	public static void main(String[] args) {
		ApplicationContext context =  SpringApplication.run(DrawingAppApplication.class, args);
		DrawService service =  context.getBean(DrawService.class);
		while(true){
			service.draw(service.readCommand());
		}
	}
}
